<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/radio_controls_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.flyme.deviceoriginalsettings">
    <SwitchPreference android:persistent="false" android:title="@string/airplane_mode" android:key="toggle_airplane" android:disableDependentsState="true" />
    <com.flyme.deviceoriginalsettings.AppListPreference android:persistent="false" android:title="@string/sms_application_title" android:key="sms_application" android:summary="%s" settings:keywords="@string/keywords_more_default_sms_app" />
    <SwitchPreference android:persistent="false" android:title="@string/nfc_quick_toggle_title" android:key="toggle_nfc" android:summary="@string/nfc_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/android_beam_settings_title" android:key="android_beam_settings" android:fragment="com.flyme.deviceoriginalsettings.nfc.AndroidBeam" />
    <PreferenceScreen android:title="@string/nfc_payment_settings_title" android:key="nfc_payment_settings" android:fragment="com.flyme.deviceoriginalsettings.nfc.PaymentSettings" />
    <PreferenceScreen android:title="@string/tether_settings_title_all" android:key="tether_settings" android:fragment="com.flyme.deviceoriginalsettings.TetherSettings" />
    <PreferenceScreen android:title="@string/vpn_settings_title" android:key="vpn_settings" android:fragment="com.flyme.deviceoriginalsettings.vpn2.VpnSettings" />
    <Preference android:persistent="false" android:title="@string/manage_mobile_plan_title" android:key="manage_mobile_plan" />
    <PreferenceScreen android:title="@string/wimax_settings" android:key="wimax_settings">
        <intent android:targetPackage="com.flyme.deviceoriginalsettings.wimax" android:action="android.intent.action.MAIN" android:targetClass="com.flyme.deviceoriginalsettings.wimax.WimaxSettings" />
    </PreferenceScreen>
    <SwitchPreference android:persistent="false" android:title="@string/nsd_quick_toggle_title" android:key="toggle_nsd" android:summary="@string/nsd_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/proxy_settings_title" android:key="proxy_settings" android:fragment="com.flyme.deviceoriginalsettings.ProxySelector" />
    <PreferenceScreen android:title="@string/cell_broadcast_settings" android:key="cell_broadcast_settings">
        <intent android:targetPackage="com.android.cellbroadcastreceiver" android:action="android.intent.action.MAIN" android:targetClass="com.android.cellbroadcastreceiver.CellBroadcastSettings" />
    </PreferenceScreen>
</PreferenceScreen>